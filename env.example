# Copy this file to server/.env and configure your environment variables

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/notion-app

# OpenAI Configuration (optional - for AI features)
# OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=9000
NODE_ENV=development

# JWT Secret (for authentication)
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Configuration (for nodemailer)
# For Gmail: Use app-specific password (https://support.google.com/accounts/answer/185833)
# For other providers: Update EMAIL_SERVICE and EMAIL_HOST accordingly
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password
EMAIL_FROM_NAME=Notion App

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000